    <title>Sonso+ Tv | Bienvenido</title>
    <style>
        @font-face {
            font-family: "CustomFont";
            src: url("../fonts/PlayerOne.ttf");
        }

        .h1 {
            font-family: 'CustomFont', 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
            font-weight: 700;
            color: white;
            font-size: 35px;

        }

        .background {
            background: rgb(64, 51, 58);
            background: linear-gradient(77deg, rgba(64, 51, 58, 1) 23%, rgba(71, 52, 58, 1) 65%, rgba(20, 42, 59, 1) 100%);
        }

        .infomain {
            color: rgba(255, 255, 0, 0.767);
            font-size: 18px;
        }

        .card1 {
            width: 250px;
            height: 250px;
            border-radius: 8px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.23);
        }

        .imgcard1 {
            width: 100%;
            height: 250px;
            border-radius: 8px;
            object-fit: cover;
        }

        .swiper-container {
            width: 100%;
            height: 300px;
        }
    </style>
